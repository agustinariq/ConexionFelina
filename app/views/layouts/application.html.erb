<!DOCTYPE html>
<html>
  <head>
    <title>Conexi√≥n Felina</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'ui-bundle', media: 'all' %>
    <%= javascript_pack_tag 'ui-bundle' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="card card-application">
      <div class="d-flex card-application-container">
        <%= react_component("Sidebar", props: {greeting: random_greeting, links: sidebar_links, username: current_user&.username, footer: t('navbar.footer')}, prerender: false) %>
        <div class="app-container">
          <img src="/logo.svg" class="mini-logo float-right"/>
          <% flash.each do |key, value| %>
            <%= react_component("Alert", props: {type: key, children: value}, prerender: false) %>
          <% end %>
          <%= yield %>
          <div class="pb-4 pt-4 w-100 clearfix"></div>
        </div>
      </div>
    </div>
  </body>
</html>