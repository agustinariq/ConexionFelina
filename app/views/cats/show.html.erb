
<div class="col-xs-12 col-xl-8 float-left">
<div class="d-flex mb-4">

    <div class="mr-4"><%= react_component("Avatar", props: {src: avatar_tag(@cat), size: 'bg'}, prerender: false) %></div>
    <div>
        <h1>
            <%= @cat.name %>
            <%= react_component("Tag", props: {type: 'success', children: t('cats.sterilized')},
                                html_options: {style: 'display: inline-block; margin-left: 0.5em; ',
                                prerender: false}) if @cat.sterilized %></h1>
        <%= time_ago_in_words @cat.birthday_date %></br>
        <% if !(@cat.abandoned_date.nil?) %>
            <%= t('cats.abandoned_label') %> <%= time_ago_in_words @cat.abandoned_date %></br>
        <% end %>
        <%= enum_l(@cat, :gender) %>
    </div>
</div>
<p><%= @cat.bio %></p>

<h2>Health</h2>
  <% if @cat.sufferings.count > 0 %>
    <% @cat.sufferings.each do |condition| %>
        <%= react_component("Card", props: {title: condition.illness.name, body: t('cats.diagnosed_label') + condition.diagnosis_date.to_s, action1Link: suffering_path(condition), action1: t('shared.review')}, class:'card', prerender: false) %>
    <% end %>
  <% else %>
    <p><%= t('cats.no_sufferings', cat: @cat.name) %></p>
  <% end %>
</div>
<div class="col-xs-12 col-xl-4 float-right">
    <%= react_component("Button", props: {type: 'success', value: t('cats.edit'), target: edit_cat_path(@cat)}, prerender: false) %>
    <%= react_component("Card", props: {title: @cat.colony.name, link: colony_path(@cat.colony), image: icon_tag(@cat.colony), center: true}, class:'card', prerender: false) %>
</div>

