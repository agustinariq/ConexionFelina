<h1><%= t('cats.wizard_finish_intro') %></h1>

<div class="row">
  <div class="col-xs-12 col-lg-6 center">
    <%= link_to new_cat_path(colony_id: @cat.colony.id) do %>
      <img src="/adorables.svg" class="full-width" />
      <%= react_component("Button", props: {transparent: true, name: 'commit', type: 'primary', value: t('cats.wizard_repeat')}, prerender: false) %>
    <% end %>
  </div>
  <div class="col-xs-12 col-lg-6 center">
    <%= link_to cat_path(@cat) do %>
      <img src="/corazon.svg" class="full-width"/>
      <%= react_component("Button", props: {transparent: true, name: 'commit', type: 'primary', value: t('cats.wizard_profile', cat: @cat.name)}, prerender: false) %>
    <% end %>
  </div>
</div>
