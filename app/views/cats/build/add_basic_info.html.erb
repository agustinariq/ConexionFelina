<h1>New cat</h1>
<p>We're willing to know more about this new hero<p>
<%= form_for(@cat, :url => wizard_path, :method => :put) do |f| %>
  <%= react_component("Pagination", props: {nPages: 6, currentPage: 1, backText: 'Back', nextText: 'Next'}, prerender: false) %>
  <%= render 'cat_errors' %>

  <div class="field">
    <%= f.label :name %><br>
    <%= react_component("Input", props: {name: 'cat[name]', size:'full-size'}, prerender: false) %>
  </div>
  <div class="field">
    <%= f.label :birthday_date %><br>
    <%= react_component("Input", props: {name: 'cat[birthday_date]', type: 'date', size:'full-size'}, prerender: false) %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= react_component("Switch", props: {name: 'cat[gender]', onLabel:"Male", offLabel:"Female", large: true}, prerender: false) %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, class: 'input full-width' %>
  </div>
<% end %>
