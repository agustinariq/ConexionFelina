<h1><%= t('cats.wizard_been_to_vet_intro', cat: @cat.name) %></h1>

<%= form_for(@cat, :url => wizard_path, :method => :put) do |f| %>
  <%= react_component("Pagination", props: {nPages: 6, currentPage: 4, backText: t('shared.back'), nextText: t('shared.next'), backUrl: previous_wizard_path}, prerender: false) %>
  <%= render 'cat_errors' %>
  <div class="row">
    <div class="col-xs-12 col-lg-8">
      <div class="field">
        <%= react_component("RadioGroup", props: {name: 'cat[vet]', items: [{label: t('shared.accept')}, {label: t('shared.reject')}], value: 0}, prerender: false) %>
      </div>
    </div>
    <div class="col-xs-12 col-lg-4">
      <img src="/vet.svg" class="full-width" />
    </div>
  </div>
<% end %>